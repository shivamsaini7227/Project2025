<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:padding="24dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/librebodoni"
        android:text="HOME"
        android:textColor="@color/login2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="56dp"


        android:fontFamily="@font/armata"
        android:hint="Profile"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <Button
        android:id="@+id/startTrip"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"


        android:fontFamily="@font/armata"
        android:hint="Start Trip"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/profile" />

    <Button
        android:id="@+id/journeys"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"


        android:fontFamily="@font/armata"
        android:hint="Previous Journeys"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/startTrip" />

    <Button
        android:id="@+id/maps"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"

        android:fontFamily="@font/armata"
        android:hint="Maps"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/journeys" />
    <Button
        android:id="@+id/helpline"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/armata"
        android:hint="Helpline"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/maps" />



</androidx.constraintlayout.widget.ConstraintLayout>
