<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:padding="24dp"
    tools:context=".Login">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/librebodoni"
        android:text="Driver's Details"
        android:textColor="@color/login2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/driverName"
        android:layout_width="0dp"
        android:layout_height="56dp"

        android:background="@drawable/edittext_background"
        android:fontFamily="@font/armata"
        android:hint="driver's name"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <EditText
        android:id="@+id/driverPhone"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/edittext_background"
        android:fontFamily="@font/armata"
        android:hint="phone number"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/driverName" />

    <EditText
        android:id="@+id/driverPermanentAddress"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/edittext_background"
        android:fontFamily="@font/armata"
        android:hint="address"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/driverPhone" />

    <EditText
        android:id="@+id/driverAdhaar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/armata"
        android:hint="driver's aadhar number"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/driverPermanentAddress" />
    <EditText
        android:id="@+id/driverLicense"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/armata"
        android:hint="driver's license number"
        android:padding="7dp"
        android:textColorHint="@color/login"
        android:textSize="13.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/driverAdhaar" />

    <Button
        android:id="@+id/driverDetailsSaveBttn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/imprima"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/driverLicense" />

</androidx.constraintlayout.widget.ConstraintLayout>
